<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the size of the circle -->
    <size
        android:width="30dp"
        android:height="30dp" />

    <!-- Set the color of the circle -->
    <solid android:color="#9b6cf3" />

    <!-- Optional padding for content inside the circle -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
