<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/main"
        android:theme="@style/Tasktheme"
        android:background="@drawable/background"
        tools:context="com.parthasarathimanna.todolistapp.TaskActivity">

        <!-- App Bar Layout -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAddTask"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/background_button"
                android:elevation="4dp"
                android:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="New Note"
                app:titleTextColor="#FFFFFF"
                app:titleTextAppearance="@style/ToolbarTitleText">

                <!-- Navigation Icon (e.g., Back button) -->
                <ImageView
                    android:id="@+id/toolbarNavigationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back_24"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:layout_gravity="start|center_vertical"
                    app:tint="#FFFFFF" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="Note Title"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <!-- Task Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleInplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:errorEnabled="true"
            android:hint="Enter Note Title"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taskTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="text"
                android:textSize="16sp"
                android:backgroundTint="?android:attr/colorControlHighlight" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Task Description Label -->
        <TextView
            android:id="@+id/taskDescriptionLabel"
            style="@style/LabelStyle"
            android:text="What is to be done?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <!-- Task Description Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            app:errorEnabled="true"
            android:hint="Enter Note Description"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/taskDescriptionInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="textMultiLine"
                android:lines="10"
                android:gravity="start"
                android:textSize="16sp"
                android:backgroundTint="?android:attr/colorControlHighlight" />
        </com.google.android.material.textfield.TextInputLayout>



        <!-- Priority Dropdown (Spinner) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp">

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:spinnerMode="dropdown"
                android:contentDescription="Note category selection" />

            <ImageView
                android:id="@+id/imgAddCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_playlist_add_24"
                app:tint="@color/white"
                android:contentDescription="Add new Note category" />
        </LinearLayout>

        <!-- Save Task Button -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:text="SAVE NOTE"
            android:textColor="@android:color/white"
            android:background="@drawable/background_button_2"
            android:shadowRadius="@integer/material_motion_duration_long_2"
            android:contentDescription="Save Note Button" />

    </LinearLayout>
</ScrollView>