<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <!-- Background View -->
        <View
            android:id="@+id/viewColorTag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="142dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Vertical line -->
                <View
                    android:id="@+id/vertical_line"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/vertical_line" />

                <!-- Text 1 -->
                <TextView
                    android:id="@+id/timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </RelativeLayout>
        </RelativeLayout>


        <!-- Main Content Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item"
            android:layout_marginStart="50dp"
            android:padding="10dp">

            <!-- Clickable Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/txtShowTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Task Title"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <!-- Divider Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFFFFF"
                    android:layout_below="@id/txtShowTitle"
                    android:layout_marginTop="8dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/txtShowTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtShowTitle"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Task SubTitle"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- Category -->
                <TextView
                    android:id="@+id/txtShowCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtShowTitle"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="80dp"
                    android:text="Category"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="Personal" />

                <!-- Date Label -->
                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtShowTask"
                    android:layout_marginTop="15dp"
                    android:text="Date"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <!-- Date Value -->
                <TextView
                    android:id="@+id/txtShowDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textDate"
                    android:text="22-12-2017"
                    android:textColor="@android:color/white"
                    android:visibility="visible"
                    tools:text="22-12-2024" />

                <!-- Time Label -->
                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/txtShowTask"
                    android:layout_marginTop="15dp"
                    android:text="Time"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <!-- Time Value -->
                <TextView
                    android:id="@+id/txtShowTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textTime"
                    android:layout_alignParentEnd="true"
                    android:text="10:00 AM"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="08:00 PM"
                    android:visibility="visible" />

            </RelativeLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
